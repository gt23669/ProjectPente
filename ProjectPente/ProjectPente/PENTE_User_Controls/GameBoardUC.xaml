<UserControl x:Class="ProjectPente.PENTE_User_Controls.GameBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectPente.PENTE_User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <UniformGrid Name="ugPenteBoard" Margin="10,10,445,10" Columns="19" Rows="19"></UniformGrid>
        <Button x:Name="btnClose" Content="X" HorizontalAlignment="Left" Margin="1220,10,0,0" VerticalAlignment="Top" Width="50" Height="50" FontSize="32" RenderTransformOrigin="-0.543,0.432" Click="Close_Click"/>
        <Button x:Name="btnNewGame" Content="New Game" HorizontalAlignment="Left" VerticalAlignment="Top" Width="238" Height="63" FontSize="32" Click="NewGame_Click" Margin="951,579,0,0" RenderTransformOrigin="3.004,5.111"/>
        <Label Name="lbPlayerLabel" Content="Player 1's turn." FontSize="32" HorizontalAlignment="Left" Margin="918,268,0,0" VerticalAlignment="Top" Height="148" Width="302"/>
        <Label Name="lbAlert" Content="Tria n Tessera." HorizontalAlignment="Left" Margin="951,486,0,0" VerticalAlignment="Top" Height="64" Width="238"/>
    </Grid>
</UserControl>
